pipeline {
    agent any

    stages {
        stage('Checkout Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/rahulcbu/Gradcap.git'
            }
        }
        
        stage('Docker Login') {
            steps {
                script {
                    // Docker login command
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials-id', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh "docker login -u cappro -p admin12345"
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Temporary: Build the Docker image (commented out)
                    sh '// Temporary: Building the Docker image'
                    // sh 'docker build -t cappro/gradapp:v1 .'
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    // Temporary: Push the Docker image to Docker Hub (commented out)
                    sh '// Temporary: Pushing the Docker image to Docker Hub'
                    // sh 'docker push cappro/gradapp:v1'
                }
            }
        }
    }
}
