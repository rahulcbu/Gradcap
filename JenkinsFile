pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials-id')
        DOCKER_IMAGE_NAME = 'cappro/gradcap'
    }

    stages {
        stage('Checkout Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/rahulcbu/Gradcap.git'
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    // Login to Docker Hub using provided credentials
                    docker.withRegistry('', env.DOCKER_HUB_CREDENTIALS) {
                        // This block is only used to authenticate and doesn't require any specific action
                    }
                }
            }
        }

        stage('Check Docker Processes') {
            steps {
                sh 'docker ps'
            }
        }

        // Additional stages for build, push, and run Docker container can be added here
    }

    // Post-build actions, notifications, etc.
}
