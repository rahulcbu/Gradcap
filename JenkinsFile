pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
        DOCKER_IMAGE_NAME = 'cappro/gradcap'
    }

    stages {
        stage('Checkout Repository') {
            steps {
                // Checkout code from the specified GitHub repository
                git branch: 'main', url: 'https://github.com/rahulcbu/Gradcap.git'
            }
        }

        stage('Check Docker Processes') {
            steps {
                sh 'docker ps'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile in the repository
                    docker.build(env.DOCKER_IMAGE_NAME)
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    // Push the Docker image to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', env.DOCKER_HUB_CREDENTIALS) {
                        docker.image(env.DOCKER_IMAGE_NAME).push('latest')
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container from the pushed image
                    docker.run(env.DOCKER_IMAGE_NAME)
                }
            }
        }
    }

    // Post-build actions, notifications, etc.
}
